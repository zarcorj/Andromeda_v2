@model IEnumerable<Andromeda_v2.Models.VueloInstitucionExperimento>

@{
	ViewBag.Title = "Historico de vuelos";
}

@Styles.Render("~/Assets/tables/css")

<div class="container">
	<table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0">
		<thead class="thead-dark">
			<tr>
				<th class="th-sm">
					Nombre
					<i class="fa fa-sort float-right" aria-hidden="true"></i>
				</th>
				<th class="th-sm">
					Ubicación
					<i class="fa fa-sort float-right" aria-hidden="true"></i>
				</th>
				<th class="th-sm">
					Plataforma
					<i class="fa fa-sort float-right" aria-hidden="true"></i>
				</th>
				<th class="th-sm">
					Fecha
					<i class="fa fa-sort float-right" aria-hidden="true"></i>
				</th>
				<th class="th-sm">
					Detalles
					<i class="fa fa-sort float-right" aria-hidden="true"></i>
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var vueloC in Model)
			{	
			<tr>
				<td>@vueloC.Vuelo.Nombre</td>
				<td>@vueloC.Vuelo.Ubicacion</td>
				<td>@vueloC.Vuelo.Plataforma</td>
				<td>@vueloC.Vuelo.Fecha</td>
				<td><a href="HistoricoVuelo/Details/@vueloC.ID" type="submit" id="Detalles @vueloC.ID" name="Detalles @vueloC.ID" value=@vueloC.ID class="btn btn-success">Detalles</a></td>
			</tr>
			}
		</tbody>
		<tfoot class="thead-dark">
			<tr>
				<th>
					Nombre
				</th>
				<th>
					Ubicación
				</th>
				<th>
					Plataforma
				</th>
				<th>
					Fecha
				</th>
				<th>
					Detalles
				</th>
			</tr>
		</tfoot>
	</table>
</div>

@section Scripts
{
	<script type="text/javascript">
		$(document).ready(function () {
			$("#dtBasicExample").DataTable();
			$(".dataTables_lengt  h").addClass("bs-select");
		});
		
	</script>
}